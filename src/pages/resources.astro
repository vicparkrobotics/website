---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.svelte";

const resources = [
  {
    title: "Victoria Park Robotics",
    links: [
      { text: "VP Robotics Sponsorship package", url: "" },
      { text: "Engineering notebook", url: "" },
    ],
  },
  {
    title: "Build team",
    links: [
      {
        text: "Mechanical guide",
        url: "https://docs.google.com/presentation/d/1D-TTWkGcIM9IYwn_SvGX0fwiERCBiqFc/edit?rtpof=true&sd=true",
      },
      {
        text: "Material guide",
        url: "https://docs.google.com/presentation/d/1XWlT2D6pqDgk782QwVp3kUptwbJLyZR2/edit",
      },
    ],
  },
  {
    title: "Electronics",
    links: [
      {
        text: "General Electronics System Notes",
        url: "https://drive.google.com/file/d/1EDPonK7Pc_Vf_9crYTMUXauCYa4-7a5h/view",
      },
      {
        text: "Additional System Notes",
        url: "https://mililanirobotics.gitbooks.io/frc-electrical-bible/content/",
      },
      {
        text: "Wiring the FRC Control System",
        url: "https://wpilib.screenstepslive.com/s/currentCS/m/kop/l/1030226-wiring-the-frc-control-system",
      },
      {
        text: "FRC Pneumatics Guide",
        url: "https://firstfrc.blob.core.windows.net/frc2017/pneumatics-manual.pdf",
      },
    ],
  },
  {
    title: "Programming",
    subsections: [
      {
        subtitle: "Computer Vision",
        links: [
          {
            text: "FIRST Machine Learning Toolchain",
            url: "https://ftc-docs.firstinspires.org/en/latest/ftc_ml/",
          },
          {
            text: "First Robotics Resource library",
            url: "https://www.firstinspires.org/resource-library/ftc/game-and-season-info",
          },
          {
            text: "Introduction to Machine Learning - Youtube",
            url: "https://www.youtube.com/watch?v=KNAWp2S3w94",
          },
          {
            text: "Introduction to Machine Learning",
            url: "https://developers.google.com/machine-learning/crash-course/ml-intro",
          },
        ],
      },
      {
        subtitle: "Other",
        links: [
          {
            text: "Learn roadrunner",
            url: "https://learnroadrunner.com/#frequently-asked-questions",
          },
          {
            text: "Mecanum wheels tutorial",
            url: "https://www.youtube.com/watch?v=noqBUEgyQ8A",
          },
          {
            text: "Programming Mecanum wheels",
            url: "https://www.youtube.com/watch?v=TSCD2fjNh0I",
          },
        ],
      },
    ],
  },
  {
    title: "Web development",
    links: [
      { text: "Learn Svelte", url: "https://svelte.dev/" },
      { text: "Tailwindcss", url: "https://tailwindcss.com/" },
      {
        text: "Tailwindcss Component library (DaisyUI)",
        url: "https://daisyui.com/components/",
      },
    ],
  },
];
---

<BaseLayout title="Resources">
  <Hero
    backgroundImage="url(/about-us-hero.webp)"
    gradientTitleText="Resources"
    descriptionText="Additional learning resources for members or visitors alike"
  />

  <div class="container mx-auto px-6 py-10 max-w-4xl">
    <h2 class="text-4xl font-bold mb-8 text-center">Resources</h2>

    <div class="space-y-6">
      {
        resources.map((category) => (
          <div class="bg-base-300 dark:bg-base-200 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-2xl font-semibold mb-4 text-primary dark:text-secondary">
              {category.title}
            </h3>

            {category.links && (
              <ul class="list-disc list-inside space-y-3 ml-4">
                {category.links.map((link) => (
                  <li class="leading-relaxed">
                    <a
                      href={link.url}
                      class="text-blue-600 hover:text-blue-700 dark:text-blue-500 dark:hover:text-blue-600 underline hover:no-underline transition-colors duration-200 font-medium"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {link.text}
                    </a>
                  </li>
                ))}
              </ul>
            )}

            {category.subsections &&
              category.subsections.map((subsection) => (
                <div class="mt-6">
                  <h4 class="text-xl font-medium mb-3 text-tertiary">
                    {subsection.subtitle}
                  </h4>
                  <ul class="list-disc list-inside space-y-3 ml-4">
                    {subsection.links.map((link) => (
                      <li class="leading-relaxed">
                        <a
                          href={link.url}
                          class="text-blue-600 hover:text-blue-700 underline hover:no-underline transition-colors duration-200 font-medium"
                          target="_blank"
                          rel="noopener noreferrer"
                        >
                          {link.text}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>

<style></style>
